<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SubActivity">

    <ImageView
        android:id="@+id/img_subitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pink_donut1" />

    <TextView
        android:id="@+id/txt_subitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Pink Donut"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Spicy tasty donut family"
        android:textAlignment="textStart"
        android:textColor="#857E7E"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_subprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:rotationY="0"
        android:text="$20.00"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Delivery in : 30 min"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:text="Restaurants info"
        android:textColor="#151515"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:text=" Order a Large Pizza but the size is the equivalent of a medium/small from other places at the same price range."
        android:textColor="#353434" />

    <Button
        android:id="@+id/button"
        android:layout_width="316dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:background="#F2F6EF"
        android:backgroundTint="@color/black"
        android:text="Add to cart"
        android:textColor="#A1887F"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>